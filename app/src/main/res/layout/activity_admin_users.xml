<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.admin.AdminUsersActivity">

    <TextView
        android:id="@+id/txtUsersTitle"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Users"
        android:textColor="#3F51B5"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnReturnUsers"
        android:text="Return"
        tools:layout_editor_absoluteX="304dp"
        tools:layout_editor_absoluteY="709dp"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleViewUsers"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:scrollbarSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="142dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/eTxtAdminUsersSearch"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:text="find User history by Id"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/eTxtAdminUsersSearch"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="108dp" />

    <EditText
        android:id="@+id/eTxtAdminUsersSearch"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="enter id"
        android:inputType="textPersonName"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/txtUsersTitle"
        tools:layout_editor_absoluteY="91dp" />

    <Button
        android:id="@+id/btnAdminUsersSearch"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Search"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/eTxtAdminUsersSearch"
        app:layout_constraintTop_toBottomOf="@+id/txtUsersTitle"
        tools:layout_editor_absoluteX="286dp"

        tools:layout_editor_absoluteY="89dp" />
</androidx.constraintlayout.widget.ConstraintLayout>