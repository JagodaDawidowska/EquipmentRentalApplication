<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jdawidowska.equipmentrentalservice">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EquipmentRentalService"
        android:usesCleartextTraffic="true">

        <!-- general activities -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="false" />
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false" />

        <!-- user activities -->
        <activity
            android:name=".activities.user.UserMenuActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.user.UserRentingActivity"
            android:exported="false" />
        <activity
            android:name=".activities.user.UserCurrentlyRentedActivity"
            android:exported="false" />
        <activity
            android:name=".activities.user.UserRentingHistoryActivity"
            android:exported="false" />

        <!-- admin activities -->
        <activity
            android:name=".activities.admin.HistoryActivity"
            android:exported="false" />
        <activity
            android:name=".activities.admin.UsersActivity"
            android:exported="false" />
        <activity
            android:name=".activities.admin.InventoryActivity"
            android:exported="false" />
        <activity
            android:name=".activities.admin.FeedbacksActivity"
            android:exported="false" />
        <activity
            android:name=".activities.admin.RentedInventoryActivity"
            android:exported="false" />
        <activity
            android:name=".activities.admin.MenuAdminActivity"
            android:exported="true" />
    </application>
</manifest>